<%- model_class = Case -%>
<div class="page-header">
  <h1><%=t '.title', :default => Case %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number) %></dt>
      <dd><pre class="prettyprint"><%= @case.phone_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:metadata_hash) %></dt>
      <dd><pre class="prettyprint"><%= @case.metadata_hash %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @case.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fsa) %></dt>
      <dd><pre class="prettyprint"><%= @case.fsa %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:language) %></dt>
      <dd><pre class="prettyprint"><%= @case.language %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:offset_hours_from_eastern) %></dt>
      <dd><pre class="prettyprint"><%= @case.offset_hours_from_eastern %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cases_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_case_path(@case), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              case_path(@case),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

