<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => Question %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @question.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:question_media) %></dt>
      <dd><pre class="prettyprint"><%= @question.question_media %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:choice_prompt_repeat_media) %></dt>
      <dd><pre class="prettyprint"><%= @question.choice_prompt_repeat_media %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:no_choice_media) %></dt>
      <dd><pre class="prettyprint"><%= @question.no_choice_media %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:invalid_choice_media) %></dt>
      <dd><pre class="prettyprint"><%= @question.invalid_choice_media %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:maximum_repeats_media) %></dt>
      <dd><pre class="prettyprint"><%= @question.maximum_repeats_media %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:maximum_invalid_repeats_media) %></dt>
      <dd><pre class="prettyprint"><%= @question.maximum_invalid_repeats_media %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:goto_name) %></dt>
      <dd><pre class="prettyprint"><%= @question.goto_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:goto_name_code) %></dt>
      <dd><pre class="prettyprint"><%= @question.goto_name_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:menu_render_options) %></dt>
      <dd><pre class="prettyprint"><%= @question.menu_render_options %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

