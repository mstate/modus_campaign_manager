<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => Question %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:question_media) %></th>
      <th><%= model_class.human_attribute_name(:choice_prompt_repeat_media) %></th>
      <th><%= model_class.human_attribute_name(:no_choice_media) %></th>
      <th><%= model_class.human_attribute_name(:invalid_choice_media) %></th>
      <th><%= model_class.human_attribute_name(:maximum_repeats_media) %></th>
      <th><%= model_class.human_attribute_name(:maximum_invalid_repeats_media) %></th>
      <th><%= model_class.human_attribute_name(:goto_name) %></th>
      <th><%= model_class.human_attribute_name(:goto_name_code) %></th>
      <th><%= model_class.human_attribute_name(:menu_render_options) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.name %></td>
        <td><%= question.question_media %></td>
        <td><%= question.choice_prompt_repeat_media %></td>
        <td><%= question.no_choice_media %></td>
        <td><%= question.invalid_choice_media %></td>
        <td><%= question.maximum_repeats_media %></td>
        <td><%= question.maximum_invalid_repeats_media %></td>
        <td><%= question.goto_name %></td>
        <td><%= question.goto_name_code %></td>
        <td><%= question.menu_render_options %></td>
        <td><%=l question.created_at, format: :long %></td>
        <td>
          <%= link_to question_path(question), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to question_path(question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_path,
            :class => 'btn btn-primary' %>
