<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Survey</th>
      <th>Name</th>
      <th>Question media</th>
      <th>Choice prompt repeat media</th>
      <th>No choice media</th>
      <th>Invalid choice media</th>
      <th>Maximum repeats media</th>
      <th>Maximum invalid repeats media</th>
      <th>Goto name</th>
      <th>Goto name code</th>
      <th>Menu render options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.survey %></td>
        <td><%= question.name %></td>
        <td><%= question.question_media %></td>
        <td><%= question.choice_prompt_repeat_media %></td>
        <td><%= question.no_choice_media %></td>
        <td><%= question.invalid_choice_media %></td>
        <td><%= question.maximum_repeats_media %></td>
        <td><%= question.maximum_invalid_repeats_media %></td>
        <td><%= question.goto_name %></td>
        <td><%= question.goto_name_code %></td>
        <td><%= question.menu_render_options %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

